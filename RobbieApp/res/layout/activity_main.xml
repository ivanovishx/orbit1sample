<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radial_background"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context="com.example.robbieapp.MainActivity" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/eduBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/edu1" />

        <ImageButton
            android:id="@+id/robieeBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/robiee1" />

        <ImageButton
            android:id="@+id/musicBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/music1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/papasBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/papas1" />

        <ImageButton
            android:id="@+id/lampBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/lamp1" />

    </LinearLayout>

</LinearLayout>